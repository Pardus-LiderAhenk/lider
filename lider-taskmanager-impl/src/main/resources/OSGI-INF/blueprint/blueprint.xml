<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
                 http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                 http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0 http://svn.apache.org/repos/asf/aries/trunk/blueprint/blueprint-cm/src/main/resources/org/apache/aries/blueprint/compendium/cm/blueprint-cm-1.1.0.xsd
         ">

	<service ref="taskManager">
		<interfaces>
			<value>tr.org.liderahenk.lider.core.api.taskmanager.ITaskManager</value>
			<value>tr.org.liderahenk.lider.core.api.messaging.subscribers.ITaskStatusSubscriber</value>
		</interfaces>
	</service>
	<bean id="taskManager" class="tr.org.liderahenk.lider.taskmanager.TaskManagerImpl"
		init-method="init" destroy-method="destroy">
		<property name="pluginDao" ref="pluginDao" />
		<property name="taskDao" ref="taskDao" />
		<property name="commandDao" ref="commandDao" />
		<property name="ldapService" ref="ldapService" />
		<property name="messagingService" ref="messagingService" />
		<property name="messageFactory" ref="messageFactory" />
		<property name="eventAdmin" ref="eventAdmin" />
		<property name="configurationService" ref="configurationService" />
		<property name="agentDao" ref="agentDao" />
		<property name="entityFactory" ref="entityFactory" />
		<property name="mailService" ref="mailService" />
		<property name="mailAddressDao" ref="mailAddressDao" />
	</bean>

	<!-- Task status notifier for subscribed plugins -->
	<service ref="pluginNotifier" interface="org.osgi.service.event.EventHandler">
		<service-properties>
			<entry key="event.topics" value="tr/org/liderahenk/task/status/received" />
		</service-properties>
	</service>
	<bean id="pluginNotifier"
		class="tr.org.liderahenk.lider.taskmanager.notifiers.PluginNotifier">
	</bean>
	
	
	<service ref="mailManagerNotifier" interface="org.osgi.service.event.EventHandler">
		<service-properties>
			<entry key="event.topics" value="tr/org/liderahenk/task/status/received" />
		</service-properties>
	</service>
	<bean id="mailManagerNotifier"
		class="tr.org.liderahenk.lider.taskmanager.notifiers.MailManagerNotifier">
		
		<property name="commandDao" ref="commandDao" />
		<property name="mailContentDao" ref="mailContentDao" />
		<property name="mailAddressDao" ref="mailAddressDao" />
		<property name="mailService" ref="mailService" />
		<property name="localeService" ref="localeService" />
	</bean>
	

	<bean id="mailNotifier"
		class="tr.org.liderahenk.lider.taskmanager.notifiers.MailNotifier"
		init-method="init" destroy-method="destroy">
		<property name="mailService" ref="mailService" />
		<property name="mailAddressDao" ref="mailAddressDao" />
		<property name="commandDao" ref="commandDao" />
		<property name="configurationService" ref="configurationService" />
		<property name="entityFactory" ref="entityFactory" />
		<property name="ldapService" ref="ldapService" />
		<property name="localeService" ref="localeService" />
	</bean>
	
	<!-- Task status notifier for Lider Console -->
	<service ref="liderConsoleNotifier" interface="org.osgi.service.event.EventHandler">
		<service-properties>
			<entry key="event.topics" value="tr/org/liderahenk/task/status/received" />
		</service-properties>
	</service>
	<bean id="liderConsoleNotifier"
		class="tr.org.liderahenk.lider.taskmanager.notifiers.LiderConsoleNotifier">
		<property name="messageFactory" ref="messageFactory" />
		<property name="messagingService" ref="messagingService" />
	</bean>

	<reference id="pluginDao" interface="tr.org.liderahenk.lider.core.api.persistence.dao.IPluginDao" />
	<reference id="taskDao" interface="tr.org.liderahenk.lider.core.api.persistence.dao.ITaskDao" />
	<reference id="commandDao" interface="tr.org.liderahenk.lider.core.api.persistence.dao.ICommandDao" />
	<reference id="agentDao" interface="tr.org.liderahenk.lider.core.api.persistence.dao.IAgentDao" />
	<reference id="ldapService" interface="tr.org.liderahenk.lider.core.api.ldap.ILDAPService" />
	<reference id="messagingService" interface="tr.org.liderahenk.lider.core.api.messaging.IMessagingService" />
	<reference id="messageFactory" interface="tr.org.liderahenk.lider.core.api.messaging.IMessageFactory" />
	<reference id="entityFactory" interface="tr.org.liderahenk.lider.core.api.persistence.factories.IEntityFactory" />
	<reference id="configurationService" interface="tr.org.liderahenk.lider.core.api.configuration.IConfigurationService" />
	<reference id="eventAdmin" interface="org.osgi.service.event.EventAdmin" />
	<reference id="localeService" interface="tr.org.liderahenk.lider.core.api.i18n.ILocaleService" />
	<reference id="mailService"  interface="tr.org.liderahenk.lider.core.api.mail.IMailService" />
	<reference id="mailAddressDao"  interface="tr.org.liderahenk.lider.core.api.persistence.dao.IMailAddressDao" />
	<reference id="mailContentDao"	interface="tr.org.liderahenk.lider.core.api.persistence.dao.IMailContentDao" />
	<reference-list id="taskAwareCommands"
		interface="tr.org.liderahenk.lider.core.api.plugin.ITaskAwareCommand"
		availability="optional">
		<reference-listener bind-method="bindCommand" unbind-method="unbindCommand" ref="pluginNotifier" />
	</reference-list>

</blueprint>
